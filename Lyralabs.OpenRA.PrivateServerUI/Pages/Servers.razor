@inherits IndexViewModel
@page "/servers"

<PageTitle>Servers</PageTitle>

<h1>Servers</h1>

<div class="container-fluid">
    <div class="row">
        @foreach (var server in this.GameServerService.GetRunningServers())
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <strong>@server.Name</strong>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dd class="col-6">IP</dd>
                            <dt class="col-6"></dt>
                            <dd class="col-6">Port</dd>
                            <dt class="col-6">@server.ListenPort</dt>
                            <dd class="col-6">Time left</dd>
                            <dt class="col-6">3h</dt>
                        </dl>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
